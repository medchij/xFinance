{
  "version": 2,
  "functions": {
    "api/server.js": {
      "runtime": "nodejs@18.x",
      "includeFiles": "backend/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/server"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/XFinance.html",
      "permanent": true
    }
  ]
}
